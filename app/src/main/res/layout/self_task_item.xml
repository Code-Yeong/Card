<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/self_task_item_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/self_task_item_id"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/self_task_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    android:padding="2dp"
                    android:textColor="#000" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/self_task_item_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.2"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/self_task_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/self_task_item_time_label"
                    android:alpha="0.2"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/self_task_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#000" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/self_task_item_look"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#f5ae06"
            android:gravity="center"
            android:text="详情"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/self_task_item_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/self_task_item_look"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/self_task_item_abort"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/self_task_item_delete"
            android:background="#3152f9"
            android:gravity="center"
            android:text="终止"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>