<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/self_task_item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/self_task_item_id"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="#000" />

        <TextView
            android:id="@+id/self_task_item_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/self_task_item_id"
            android:gravity="left|center_vertical"
            android:textColor="#000" />

        <TextView
            android:id="@+id/self_task_item_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="#000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/self_task_item_look"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#f5ae06"
            android:gravity="center"
            android:text="详情"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/self_task_item_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/self_task_item_look"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/self_task_item_abort"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/self_task_item_delete"
            android:background="#3152f9"
            android:gravity="center"
            android:text="终止"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>