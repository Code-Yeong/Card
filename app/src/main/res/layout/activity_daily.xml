<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5dcccccc"
    android:fitsSystemWindows="true"
    tools:context="com.vector.com.card.view.DailyActivity">

    <ImageView
        android:id="@+id/daily_empty"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:background="@drawable/icon_empty" />

    <TextView
        android:id="@+id/daily_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:background="#fff"
        android:padding="5dp"
        android:gravity="center"
        android:text="实事求是，做最真实的自己"
        android:textColor="#92cccccc" />

    <com.vector.com.card.utils.MyRecyclerViewForDaily
        android:id="@+id/daily_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/daily_notice">

    </com.vector.com.card.utils.MyRecyclerViewForDaily>

</RelativeLayout>
